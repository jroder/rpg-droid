<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="View_CharacterSheet_Space">
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="View_CharacterSheet_Field">
        <item name="android:layout_margin">6dp</item>
        <item name="android:padding">8dp</item>
        <item name="borderWidth">0dp</item>
        <item name="borderColor">#000000</item>
        <item name="cornerRadius">5dp</item>
        <item name="labelFontSize">7dp</item>
        <item name="labelColor">#ff858585</item>
        <item name="valueFontSize">20dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ff555555</item>
    </style>

</resources>
